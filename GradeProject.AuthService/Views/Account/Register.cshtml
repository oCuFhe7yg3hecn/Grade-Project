@using GradeProject.AuthService.Models.Account
@model UserRegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form asp-route="Register" method="post" class="form-register">
    <div class="form-group col-md-12">
        <label asp-for="Email" class="col-md-3"></label>
        <input asp-for="Email" name="Email" />
    </div>
    <div class="form-group col-md-12">
        <label asp-for="Username" class="col-md-3"></label>
        <input asp-for="Username" name="Username" />
    </div>
    <div class="form-group col-md-12">
        <label asp-for="Password" class="col-md-3"></label>
        <input asp-for="Password" name="Password" />
    </div>
    <div class="form-group col-md-12">
        <label asp-for="PasswordConfirm" class="col-md-3"></label>
        <input asp-for="PasswordConfirm" name="PasswordConfirm" />
    </div>
    <div class="form-group col-md-12">
        <button type="submit">Register</button>
        <button class="btn btn-default" name="button" value="cancel">Cancel</button>
    </div>
</form>

<style>
    .form-register {
        display: flex;
    }
</style>