@model IEnumerable<GradeProject.AuthService.Models.Clients.UserClientDTO>

@{
    ViewData["Title"] = "Index";
}

<h2>Clients</h2>

<hr />
<div class="row">
    <div class="row placeholder-menu">
        <button class="mdl-button mdl-js-button">
            <i class="material-icons">
                add_box
            </i> Add new
        </button>
    </div>

    @foreach (var client in Model)
    {
        <div class="mdl-card mdl-card mdl-card--border mdl-shadow--2dp user-client-card col-md-4">
            <div class="mdl-card__title">
                <h2 class="mdl-card__subtitle-text">@client.ClientName</h2>

            </div>
            <div class="mdl-card__media user-client-card-image" style="background-image: url(~/../..@client.LogoUri)">
            </div>
            <div class="mdl-card__supporting-text">
                <p>Client Id : @client.ClientId</p>
                @if (client.Type == "application")
                {
                    <p>Client Secret : @client.Secret</p>
                }
            </div>
            <div class="mdl-card__menu">
                <p>@client.Type</p>
            </div>
        </div>
    }


    <div class="mdl-card new-client-card mdl-card mdl-card--border mdl-shadow--2dp user-client-card col-md-4">
        <div class="mdl-card__media user-client-card-image">
            <a href="/Clients/Add">
                <i class="material-icons">
                    add_box
                </i>
            </a>
        </div>
    </div>

