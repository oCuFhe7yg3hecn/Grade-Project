@model GradeProject.AuthService.Models.Clients.ClientInsertModel

@{
    ViewData["Title"] = "Add";
}

<div class="wrapper">
    <h2>Add</h2>

    <p>
        Choose your type :
        @Html.ActionLink("oauth-client", "Add", "Clients", new { type = "oauth-client" }, null) |
        @Html.ActionLink("application", "Add", "Clients", new { type = "application" }, null)
    </p>
    <h4>ClientInsertModel</h4>
    <hr />
    <form asp-action="Add" enctype="multipart/form-data">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="Type" value="@Model.Type" />
            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
                <input asp-for="ClientId" class="form-control" value="client-@Guid.NewGuid()" />
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
            @if (!Model.Type.Equals("oauth-client"))
            {
                <div class="form-group">
                    <label asp-for="ClientSecret" class="control-label"></label>
                    <input asp-for="ClientSecret" class="form-control" value="secret-@Guid.NewGuid()" />
                    <span asp-validation-for="ClientSecret" class="text-danger"></span>
                </div>
            }
            @if (Model.Type.Equals("oauth-client"))
            {
                <div class="form-group">
                    <label asp-for="ClientName" class="control-label"></label>
                    <input asp-for="ClientName" class="form-control" />
                    <span asp-validation-for="ClientName" class="text-danger"></span>
                </div>
                <div class="form-group form-group-client-image">
                    <label class="control-label">Image</label>
                    <div class="inputs">
                        <input id="image-selector" type="file" name="ClientLogo" />
                        <img id="client-image" src="/icon.png" alt="your image" />
                    </div>
                </div>
            }
        </div>
        <div class="col-lg-6">
            @if (Model.Type.Equals("oauth-client"))
            {
                <div class="form-group">
                    <label asp-for="ClientUri" class="control-label"></label>
                    <input asp-for="ClientUri" class="form-control" />
                    <span asp-validation-for="ClientUri" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RedirectUris" class="control-label"></label>
                    <input asp-for="RedirectUris" class="form-control" />
                    <span asp-validation-for="RedirectUris" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostLogoutUris" class="control-label"></label>
                    <input asp-for="PostLogoutUris" class="form-control" />
                    <span asp-validation-for="PostLogoutUris" class="text-danger"></span>
                </div>
            }
        </div>
        <div class="form-group col-md-12">
            <div>
                <a asp-action="Index">Back Clients</a>
            </div>
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </form>

</div>

<style>
    .wrapper {
        margin-top: 55px;
    }
</style>

<script type="text/javascript">

    function readURL(input) {

        if (input.files && input.files[0]) {

            var reader = new FileReader();



            reader.onload = function (e) {

                $('#client-image').attr('src', e.target.result);

            }

            reader.readAsDataURL(input.files[0]);

        }

    }

    $("#image-selector").change(function () {

        readURL(this);

    });

</script>