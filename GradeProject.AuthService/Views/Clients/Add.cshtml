@model GradeProject.AuthService.Models.Clients.ClientInsertModel

@{
    ViewData["Title"] = "Add";
}

<h2>Add</h2>

<h4>ClientInsertModel</h4>
<hr />
<div class="row">
    <form asp-action="Add" enctype="multipart/form-data">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
                <input asp-for="ClientId" class="form-control" value="@Guid.NewGuid()" />
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientName" class="control-label"></label>
                <input asp-for="ClientName" class="form-control" />
                <span asp-validation-for="ClientName" class="text-danger"></span>
            </div>
            <div class="form-group form-group-client-image">
                <label class="control-label">Image</label>
                <div class="inputs">
                    <input id="image-selector" type="file" name="ClientLogo" />
                    @*<span asp-validation-for="" class="text-danger"></span>*@
                    <img id="client-image" src="#" alt="your image" />
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="ClientUri" class="control-label"></label>
                <input asp-for="ClientUri" class="form-control" />
                <span asp-validation-for="ClientUri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RedirectUris" class="control-label"></label>
                <input asp-for="RedirectUris" class="form-control" />
                <span asp-validation-for="RedirectUris" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostLogoutUris" class="control-label"></label>
                <input asp-for="PostLogoutUris" class="form-control" />
                <span asp-validation-for="PostLogoutUris" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


<script type="text/javascript">

    function readURL(input) {

        if (input.files && input.files[0]) {

            var reader = new FileReader();



            reader.onload = function (e) {

                $('#client-image').attr('src', e.target.result);

            }

            reader.readAsDataURL(input.files[0]);

        }

    }

    $("#image-selector").change(function () {

        readURL(this);

    });

</script>